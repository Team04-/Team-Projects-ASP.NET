@model TeamProjects.Models.timetable_room

@{
    ViewBag.Title = "Create";
}
@section Includes{
    <link href="@Url.Content("~/Content/chosen/chosen.min.css")" rel="stylesheet" />
    <script src="@Url.Content("~/Scripts/chosen.jquery.min.js")" type="text/javascript"></script>
}
<h2>Create</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>timetable_room</legend>

        <div class="editor-label">
            <label for="Room_ID">Building</label>
        </div>
        <div class="editor-field">
            <select id="Building_ID" class="Building_ID" name="Building_ID" data-placeholder="Select the building...">
                <option disabled selected>Select the building...</option>
                @{
                    for (int i = 0; i < ViewBag.buildingCodes.Count;i++)
                    {
                        <option value="@ViewBag.buildingCodes[i]">@ViewBag.buildingCodes[i] - @ViewBag.buildingNames[i]</option>
                    }
                 }
            </select>
        </div>

        <div class="editor-label">
            <label for="Room_ID">Room ID</label>
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Room_ID)
            @Html.ValidationMessageFor(model => model.Room_ID)
        </div>

        <div class="editor-label">
            <label for="Capacity">Capacity ID</label>
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Capacity)
            @Html.ValidationMessageFor(model => model.Capacity)
        </div>

        <div class="editor-label">
            <label for="Type_ID">Room Type</label>
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Type_ID)
            @Html.ValidationMessageFor(model => model.Type_ID)
        </div>

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
<script>
    $("#Building_ID").chosen({ width: "315px" });
</script>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
