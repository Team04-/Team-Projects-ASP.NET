@model TeamProjects.Models.LoginModel

@{
    ViewBag.Title = "Log in";
}
@section Includes{
    <link href="@Url.Content("/Content/chosen.min.css")" rel="stylesheet" />
    <script type="text/javascript" src="@Url.Content("/Scripts/chosen.jquery.js")"></script>
    <script type="text/javascript" src="@Url.Content("/Scripts/chosen.proto.js")"></script>
}

<hgroup class="title">
    <h1>@ViewBag.Title.</h1>
</hgroup>

<section id="loginForm">
<h2>Use a local account to log in.</h2>
@using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl })) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Log in Form</legend>
        <ol>
            <li>
                <select data-placeholder="Choose a department" data-val="true" data-val-required="A department must be chosen." class="chosen-select" id="UserName" name="UserName">
                    <option value=""></option>
                    @for (int x = 0; x < ViewBag.DepartmentsInfo[0].Length; x += 1)
                    {
                        <option value="@Html.Raw(ViewBag.DepartmentsInfo[1][x])">@Html.Raw(ViewBag.DepartmentsInfo[1][x]) - @Html.Raw(ViewBag.DepartmentsInfo[0][x])</option>
                    }
                </select>
            </li>
            <li>
                @Html.LabelFor(m => m.Password)
                @Html.PasswordFor(m => m.Password)
                @Html.ValidationMessageFor(m => m.Password)
            </li>
            <li>
                @Html.CheckBoxFor(m => m.RememberMe)
                @Html.LabelFor(m => m.RememberMe, new { @class = "checkbox" })
            </li>
        </ol>
        <input type="submit" value="Log in" />
    </fieldset>
    <p>
        @Html.ActionLink("Register", "Register") if you don't have an account.
    </p>
}
</section>

<section class="social" id="socialLoginForm">
    <h2>Use another service to log in.</h2>
    @Html.Action("ExternalLoginsList", new { ReturnUrl = ViewBag.ReturnUrl })
</section>
<script>
    window.onload = function () {
        $(".chosen-select").chosen({ no_results_text: "Please choose a department!" });
        $(".chosen-container").css("width", "200px");
    }
</script>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
