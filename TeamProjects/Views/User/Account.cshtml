@model TeamProjects.Models.PasswordModel
@{
    ViewBag.Title = "Account";
}
<h2>Account</h2>
@if (TempData["changed"] != null)
{
    <div class="successdialog">
        <i class="fa fa-check"></i> You have successfully changed your password! Please use this password to log in with in the future.
    </div>
}
@using (Html.BeginForm())
{
    <div><label for="Password">New Password: </label></div>
    <div>
        @Html.PasswordFor(u => u.Password)
        @Html.ValidationMessageFor(u => u.Password) 
        <span class="passVal show"><i class="fa fa-exclamation-triangle"></i> You must enter a password.</span>
    </div>
    
    <input class="submitPass" type="submit" value="Save Changes" disabled="disabled"/>
}
<script>
    $('#Password').keyup(function () {
        if ($.trim($(this).val()) == '') {
            $('.passVal').removeClass('hide').addClass('show');
            $('.submitPass').prop("disabled", true);
        } else {
            $('.passVal').removeClass('show').addClass('hide');
            $('.submitPass').prop("disabled", false);
        }
    });
</script>
