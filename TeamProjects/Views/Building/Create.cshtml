@model TeamProjects.Models.timetable_building

@{
    ViewBag.Title = "Create";
}
@section Includes{
    <link href="@Url.Content("~/Content/chosen/chosen.min.css")" rel="stylesheet" />
    <script src="@Url.Content("~/Scripts/chosen.jquery.min.js")" type="text/javascript"></script>
}
<h2>Create</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>timetable_building</legend>

        <div class="editor-label">
            <label for="Building_ID">Building Code</label>
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Building_ID)
            @Html.ValidationMessageFor(model => model.Building_ID)
        </div>

        <div class="editor-label">
            <label for="Building_Name">Building Name</label>
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Building_Name)
            @Html.ValidationMessageFor(model => model.Building_Name)
        </div>

        <div class="editor-label">
            <label for="Park_ID"></label>
        </div>
        <div class="editor-field">
            <select id="Park_ID" class="Park_ID" name="Park_ID" data-placeholder="Select the park...">
                <option disabled selected>Select the park...</option>
                @{
                    for (int i = 0; i < ViewBag.parkIDs.Count; i++)
                    {
                        <option value="@ViewBag.parkIDs[i]">@ViewBag.parkNames[i]</option>
                    }
                 }
            </select>
        </div>

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
<script>
    $("#Park_ID").chosen({ width: "315px" });
</script>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
