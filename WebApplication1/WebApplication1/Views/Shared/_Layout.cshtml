<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - My ASP.NET MVC Application</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
        <script type="text/javascript" src="~/Scripts/accessibility.js"></script>
    </head>
    <body>
        <header>
            <div class="content-wrapper">
                <div class="float-left">
                    <p class="site-title"><img src="~/Images/LU-mark-rgb.png" /></p>
                </div>
                <div class="accessibility">
                    <a href="javascript:increaseFont();"><img src="~/images/zoom_in.png" alt="Zoom In (Increase Font Size)" /></a>
                    <a href="javascript:decreaseFont();"><img src="~/images/zoom_out.png" alt="Zoom Out (Decrease Font Size)" /></a>
                    <a href="javascript:resetFont();"><img src="~/images/zoom.png" alt="Reset Zoom to Defaults" /></a>
                    <a href="javascript:negativar();"><img src="~/images/contrast.png" alt="Invert Colours" /></a>
                </div>
                <div class="float-right">
                    <section id="login">
                        @Html.Partial("_LoginPartial")
                    </section>
                    <nav>
                        <ul id="menu">
                            <li>@Html.ActionLink("Home", "Index", "Home")</li>
                            <li>@Html.ActionLink("About", "About", "Home")</li>
                            <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                            <li><a href="Module">Modules</a></li>
                            <li><a href="Building">Buildings</a></li>
                            <li><a href="Facility">Facilities</a></li>
                        </ul>
                    </nav>
                </div>
            </div>
        </header>
        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - My ASP.NET MVC Application</p>
                </div>
            </div>
        </footer>

        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)
    </body>
</html>
