<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Timetabling System</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    @RenderSection("Includes", required: false)
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <!--<img id="img_logo" alt="Logo" src="@Url.Content("~/Content/Images/shield_logo_alt.png")" />-->
                @Html.ActionLink("Timetabling System", "Index", "Home", null, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    @if (Request.IsAuthenticated)
                    {
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Requests <b class="caret"></b></a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("New Request", "Create", "Request")</li>
                                <li>@Html.ActionLink("View Current Requests", "Index", "Request")</li>
                                <li>@Html.ActionLink("View Previous Requests", "Index", "Request")</li>
                            </ul>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Management <b class="caret"></b></a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Modules", "Index", "Module")</li>
                                <li class="divider"></li>
                                <li>@Html.ActionLink("Buildings", "Index", "Building")</li>
                                <li>@Html.ActionLink("Rooms", "Index", "Room")</li>
                                <li>@Html.ActionLink("Facilities", "Index", "Facilities")</li>
                            </ul>
                        </li>
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Timetabling System</p>
        </footer>
    </div>
</body>
</html>
